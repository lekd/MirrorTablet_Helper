<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer"
    tools:context="com.example.lkduy.remotehelper.MainActivity"
    android:background="#ff000000">
    <org.opencv.android.JavaCameraView android:id="@+id/main_openCVCamView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        opencv:camera_id="1"/>
    <ImageView android:id="@+id/imvRemoteVideoFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView android:id="@+id/main_imvProcessed"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="1.0"/>
</RelativeLayout>
